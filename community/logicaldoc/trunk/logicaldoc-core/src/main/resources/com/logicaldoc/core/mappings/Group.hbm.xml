<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-lazy="false">
	<class name="com.logicaldoc.core.security.Group" table="co_groups">
		<cache usage="read-write" />
		<id name="groupName" type="string" column="co_groupname" />
		<property name="groupDesc" type="string" column="co_groupdesc" length="255" />
        <set name="users" table="ld_usergroup" lazy="false">
             <key column="ld_groupname"/>
             <many-to-many column="ld_userid" class="com.logicaldoc.core.security.User" />
        </set>
	</class>
</hibernate-mapping>
