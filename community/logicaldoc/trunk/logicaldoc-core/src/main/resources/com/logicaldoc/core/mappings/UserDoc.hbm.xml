<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-lazy="false">
	<class name="com.logicaldoc.core.security.UserDoc" table="ld_userdoc">
		<cache usage="read-write" />
		<composite-id name="id" class="com.logicaldoc.core.security.UserDocID">
			<key-property name="docId" type="long" column="ld_docid" />
			<key-property name="userName" type="string" column="ld_username" />
		</composite-id>
		<property name="date" type="timestamp" column="ld_date" />
	</class>
</hibernate-mapping>