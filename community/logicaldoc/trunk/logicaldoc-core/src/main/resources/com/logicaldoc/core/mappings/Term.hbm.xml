<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-lazy="false">
	<class name="com.logicaldoc.core.document.Term" table="ld_term">
		<cache usage="read-write" />
        <id name="id" type="long" column="ld_id" unsaved-value="0">
            <generator class="increment" />
        </id>
        <property name="docId" type="long" column="ld_docid" not-null="true"/>
        <property name="stem" type="string" column="ld_stem" not-null="true"/>
		<property name="value" type="double" column="ld_value"  />
		<property name="wordCount" type="int" column="ld_wordcount" />
		<property name="originWord" type="string" column="ld_word" length="255"/>
	</class>
</hibernate-mapping>